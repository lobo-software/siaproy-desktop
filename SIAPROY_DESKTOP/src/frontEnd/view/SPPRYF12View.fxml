<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.effect.Lighting?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="layoutPral" prefHeight="543.0" prefWidth="972.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontEnd.controller.SPPRYF12Controller">
   <top>
      <BorderPane fx:id="layoutSecundario" cache="true" cacheHint="SPEED" prefHeight="200.0" prefWidth="530.0" BorderPane.alignment="CENTER">
         <top>
            <VBox prefHeight="36.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="21.0" prefWidth="600.0" spacing="5.0">
                     <children>
                        <Button fx:id="btnRegistro" mnemonicParsing="false" text="Registro" textFill="#103912">
                           <font>
                              <Font name="Arial Black" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnConsulta" mnemonicParsing="false" text="Consulta" textFill="#174a20">
                           <font>
                              <Font name="Arial Black" size="12.0" />
                           </font>
                        </Button>
                     </children>
                     <effect>
                        <Glow />
                     </effect>
                    
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="tfMostrarDescripcion" prefHeight="25.0" prefWidth="697.0" HBox.hgrow="ALWAYS">
                           <padding>
                              <Insets top="5.0" />
                           </padding>
                        </TextField>
                        <Label fx:id="lbFecha" accessibleRole="DATE_PICKER" prefHeight="27.0" prefWidth="220.0" text="12 Ene 2016" textFill="#0b8a3e">
                           <padding>
                              <Insets bottom="5.0" left="20.0" right="5.0" top="5.0" />
                           </padding>
                           <font>
                              <Font name="Arial Black" size="18.0" />
                           </font>
                           <opaqueInsets>
                              <Insets right="5.0" />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </top>
         <left>
            <HBox fx:id="hboxBotonPlayAgregar" cache="true" cacheHint="QUALITY" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnStarStop" mnemonicParsing="false" onAction="#agregaActividades" textFill="#56ad0a">
                     <font>
                        <Font name="Arial Black" size="30.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnAgragarAtividad" mnemonicParsing="false" text="+" textFill="#0c368a">
                     <font>
                        <Font size="30.0" />
                     </font>
                     <effect>
                        <Lighting>
                           <bumpInput>
                              <Shadow />
                           </bumpInput>
                          
                        </Lighting>
                     </effect>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
               <effect>
                  <Glow />
               </effect>
              
            </HBox>
         </left>
         <center>
            <VBox blendMode="GREEN" prefHeight="77.0" prefWidth="304.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="45.0" prefWidth="262.0" spacing="40.0">
                     <children>
                        <Label fx:id="lblTotal" text="Total" textAlignment="CENTER" textFill="#ad0c91">
                           <padding>
                              <Insets bottom="5.0" left="30.0" right="70.0" top="5.0" />
                           </padding>
                           <font>
                              <Font name="Arial Black" size="23.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblInicio" layoutX="10.0" layoutY="10.0" prefHeight="41.0" prefWidth="160.0" text="Inicio" textFill="#132dae">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="55.0" top="5.0" />
                           </padding>
                           <font>
                              <Font name="Arial Black" size="21.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblFin" layoutX="38.0" layoutY="10.0" prefHeight="45.0" prefWidth="124.0" text="Fin" textFill="#3b526b">
                           <padding>
                              <Insets bottom="5.0" right="5.0" top="5.0" />
                           </padding>
                           <font>
                              <Font name="Arial Black" size="23.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox prefHeight="40.0" prefWidth="271.0" spacing="4.0">
                     <children>
                        <TextField fx:id="tfTotal" prefHeight="27.0" prefWidth="164.0">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </TextField>
                        <TextField fx:id="tftiempoInicio" prefHeight="27.0" prefWidth="197.0">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </TextField>
                        <TextField fx:id="tfFinActividad" layoutX="121.0" layoutY="10.0" prefHeight="27.0" prefWidth="163.0">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="20.0" top="5.0" />
                           </padding>
                        </TextField>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </VBox>
         </center>
         <right>
            <DatePicker fx:id="dtfFechaActual" onAction="#muestraFecha" prefHeight="25.0" prefWidth="193.0" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </top>
   <bottom>
      <HBox prefHeight="28.0" prefWidth="600.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblTotalActividades" text="Total de Actividades:" textFill="#1a0dae">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
            </Label>
            <Label fx:id="lblTotalNemero" text="3" textFill="#1b0a79" />
            <Label fx:id="lblTiempoTotal" text="Tiempo Total:" textFill="#0d1b86">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
            </Label>
            <Label fx:id="lblTiempoTo" text="00:00:00:" textFill="#080f57">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <Button fx:id="btnGuardar" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#pruebaSalida" prefHeight="25.0" prefWidth="68.0" text="Guardar " textAlignment="CENTER" />
            <Button fx:id="btnSincronizar" alignment="BOTTOM_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" text="Sincronizar" />
         </children>
      </HBox>
   </bottom>
   <center>
      <TableView fx:id="grdActividades" editable="true" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="colTimer" maxWidth="1100.0" minWidth="-Infinity" prefWidth="62.0" />
          <TableColumn fx:id="colProyecto" minWidth="0.0" prefWidth="262.0" text="PROYECTO" />
          <TableColumn fx:id="colActividades" minWidth="-1.0" prefWidth="215.0" text="ACTIVIDADADES" />
            <TableColumn fx:id="colTiempo" editable="false" prefWidth="145.0" text="TIEMPO" />
            <TableColumn fx:id="colDescripcion" prefWidth="224.0" text="DESCRIPCIÓN" />
            <TableColumn fx:id="colAvance" prefWidth="132.0" text="AVANCE %" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
